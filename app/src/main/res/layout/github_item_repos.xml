<io.clevver.ui.widget.FourThreeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/post"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_super_dark"
	android:elevation="@dimen/z_card"
	android:foreground="@drawable/dark_ripple"
	android:orientation="vertical"
	android:stateListAnimator="@animator/raise"
	android:theme="@style/ClevverDarkOverlay">
	
	<io.clevver.ui.widget.BaselineGridTextView
		android:id="@+id/repo_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:breakStrategy="simple"
		android:ellipsize="end"
		android:paddingBottom="@dimen/spacing_micro"
		android:paddingEnd="@dimen/padding_normal"
		android:paddingStart="@dimen/padding_normal"
		android:paddingTop="@dimen/padding_normal"
		android:textAppearance="@style/TextAppearance.TilePrimary"
		tools:text="Thus is a demo repository"
		app:maxLinesByHeight="true" />
	
	<io.clevver.ui.widget.BaselineGridTextView
		android:id="@+id/repo_desc"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:breakStrategy="simple"
		android:ellipsize="end"
		android:paddingBottom="@dimen/spacing_micro"
		android:paddingEnd="@dimen/padding_normal"
		android:paddingStart="@dimen/padding_normal"
		android:textAppearance="@style/TextAppearance.TileSecondary"
		tools:text="Some description here"
		app:maxLinesByHeight="true" />

</io.clevver.ui.widget.FourThreeLinearLayout>
