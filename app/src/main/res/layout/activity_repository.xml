<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="io.clevver.ui.RepositoryActivity">
	
	<Toolbar
		android:id="@+id/toolbar"
		style="@style/Widget.Clevver.HomeToolbar"
		android:layout_width="match_parent"
		android:layout_height="?android:actionBarSize"
		android:background="@color/background_super_dark"
		android:navigationIcon="@drawable/ic_arrow_back_padded"
		android:title="@string/github_repos"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/grid"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:scrollbarStyle="outsideOverlay"
		android:scrollbars="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar" />
	
	<ProgressBar
		android:id="@android:id/empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminate="true"
		android:indeterminateTint="?android:colorAccent"
		android:indeterminateTintMode="src_in"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar" />
	
	<io.clevver.ui.widget.BaselineGridTextView
		android:id="@+id/no_repos"
		style="@style/TextAppearance.DribbbleShotDescription"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/no_repo"
		app:layout_constraintBottom_toBottomOf="parent"
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar" />

</android.support.constraint.ConstraintLayout>
