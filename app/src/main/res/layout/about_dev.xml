<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:nestedScrollingEnabled="true"
	tools:showIn="@layout/activity_about">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background_light"
		android:elevation="@dimen/z_card"
		android:orientation="vertical">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/spacing_large"
			android:gravity="center_horizontal"
			android:orientation="horizontal"
			android:padding="@dimen/about_icon_padding">
			
			<ImageView
				android:id="@+id/nick_avatar"
				android:layout_width="@dimen/large_avatar_size"
				android:layout_height="@dimen/large_avatar_size"
				android:layout_marginEnd="@dimen/padding_dialog"
				android:layout_marginTop="@dimen/spacing_micro"
				android:elevation="@dimen/z_card"
				android:padding="@dimen/avatar_padding"
				android:src="@drawable/avatar_placeholder" />
			
			<ImageView
				android:id="@+id/quabynah_avatar"
				android:layout_width="@dimen/large_avatar_size"
				android:layout_height="@dimen/large_avatar_size"
				android:layout_marginStart="@dimen/padding_dialog"
				android:layout_marginTop="@dimen/spacing_micro"
				android:elevation="@dimen/z_card"
				android:padding="@dimen/avatar_padding"
				android:src="@drawable/avatar_placeholder" />
		
		</LinearLayout>
		
		<io.clevver.ui.widget.BaselineGridTextView
			android:id="@+id/dev_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="top|center_horizontal"
			android:paddingBottom="@dimen/spacing_large"
			android:paddingEnd="@dimen/padding_normal"
			android:paddingStart="@dimen/padding_normal"
			android:paddingTop="24dp"
			android:textAppearance="@style/TextAppearance.About"
			android:textColorHighlight="?android:colorPrimary"
			android:textColorLink="@color/plaid_links" />
	
	</LinearLayout>

</ScrollView>
